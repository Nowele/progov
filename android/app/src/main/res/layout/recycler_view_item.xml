<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_view_item"
    android:layout_margin="@dimen/default_margin"
    app:cardElevation="@dimen/default_card_view_elevation"
    app:cardCornerRadius="@dimen/default_card_view_corner_radius">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_view_item_image"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_view_item_title"
            android:textSize="@dimen/default_item_title_text_size"
        />

    </LinearLayout>

</androidx.cardview.widget.CardView>